{
	"extends": "@hwei/typescript-config/base.json",
	"compilerOptions": {
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"target": "ESNext",
		"lib": ["DOM", "DOM.Iterable", "ESNext"],
		"baseUrl": ".",
		"rootDir": ".",
		"paths": {
			"@/*": ["./src/*"],
			"@utils/*": ["./src/utils/*"],
			"@test-utils/*": ["./tests/utils/*"],
			"@errors/*": ["./src/errors/*"]
		}
	},
	"include": ["."],
	"exclude": ["dist", "build", "node_modules"]
}
