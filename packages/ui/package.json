{
	"name": "@hwei/ui",
	"version": "0.0.0",
	"sideEffects": [
		"**/*.css"
	],
	"files": [
		"dist"
	],
	"exports": {
		"./styles.css": "./dist/index.css",
		"./react": {
			"import": "./dist/react/index.mjs",
			"types": "./dist/react/index.d.ts"
		},
		"./shadcn/*": {
			"import": "./dist/shadcn/*.mjs",
			"types": "./dist/shadcn/*.d.ts"
		},
		"./utils/cn": {
			"import": "./dist/utils/cn.mjs",
			"types": "./dist/utils/cn.d.ts"
		}
	},
	"license": "MIT",
	"scripts": {
		"build": "tsup",
		"lint": "eslint src/",
		"dev": "tsc watch.ts --outDir ./dist && node ./dist/watch.js",
		"type-check": "tsc --noEmit",
		"postinstall": "pnpm build"
	},
	"peerDependencies": {
		"react": "^19.0.0"
	},
	"devDependencies": {
		"@hwei/eslint-config": "workspace:*",
		"@hwei/typescript-config": "workspace:*",
		"@types/node": "^22.10.7",
		"@types/react": "^19.1.0",
		"autoprefixer": "^10.4.20",
		"postcss": "^8.5.1",
		"tailwindcss": "4.1.5",
		"typescript": "5.7.3"
	},
	"dependencies": {
		"@hookform/resolvers": "^5.0.1",
		"@hwei/tailwind-config": "workspace:*",
		"@radix-ui/react-checkbox": "^1.1.4",
		"@radix-ui/react-dialog": "^1.1.6",
		"@radix-ui/react-dropdown-menu": "^2.1.13",
		"@radix-ui/react-label": "^2.1.1",
		"@radix-ui/react-select": "^2.1.4",
		"@radix-ui/react-separator": "^1.1.1",
		"@radix-ui/react-slot": "^1.1.1",
		"@radix-ui/react-toast": "^1.2.4",
		"@radix-ui/react-tooltip": "^1.1.6",
		"@tailwindcss/postcss": "^4.1.3",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"lucide-react": "^0.503.0",
		"react-hook-form": "^7.56.3",
		"tailwind-merge": "^3.3.1",
		"tailwindcss-animate": "^1.0.7",
		"tsup": "^8.3.5",
		"zod": "^3.24.1"
	}
}
