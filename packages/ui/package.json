{
	"name": "@hwei/ui",
	"version": "0.0.0",
	"sideEffects": [
		"**/*.css"
	],
	"files": [
		"dist"
	],
	"exports": {
		"./styles.css": "./dist/index.css",
		"./react": {
			"import": "./dist/react/index.mjs",
			"types": "./dist/react/index.d.ts"
		},
		"./shadcn/*": {
			"import": "./dist/shadcn/*.mjs",
			"types": "./dist/shadcn/*.d.ts"
		},
		"./utils/cn": {
			"import": "./dist/utils/cn.mjs",
			"types": "./dist/utils/cn.d.ts"
		}
	},
	"license": "MIT",
	"scripts": {
		"build": "tsup",
		"lint": "eslint src/",
		"dev": "tsc watch.ts --outDir ./dist && node ./dist/watch.js",
		"type-check": "tsc --noEmit"
	},
	"peerDependencies": {
		"react": "^18.2.0"
	},
	"devDependencies": {
		"@hwei/eslint-config": "workspace:*",
		"@hwei/typescript-config": "workspace:*",
		"@types/node": "^22.10.5",
		"@types/react": "^19.0.4",
		"autoprefixer": "^10.4.20",
		"postcss": "^8.4.49",
		"tailwindcss": "^3.4.17",
		"typescript": "5.7.3"
	},
	"dependencies": {
		"@hookform/resolvers": "^3.10.0",
		"@hwei/tailwind-config": "workspace:*",
		"@radix-ui/react-label": "^2.1.1",
		"@radix-ui/react-separator": "^1.1.1",
		"@radix-ui/react-slot": "^1.1.1",
		"@radix-ui/react-tooltip": "^1.1.6",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"lucide-react": "^0.471.0",
		"react-hook-form": "^7.54.2",
		"tailwind-merge": "^2.6.0",
		"tailwindcss-animate": "^1.0.7",
		"tsup": "^8.3.5",
		"zod": "^3.24.1"
	}
}
