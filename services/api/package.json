		"morgan": "^1.10.0"
	},
	"devDependencies": {
		"@jest/globals": "^29.7.0",
		"@hwei/eslint-config": "workspace:*",
		"@hwei/jest-presets": "workspace:*",
		"@hwei/typescript-config": "workspace:*",
		"@types/body-parser": "^1.19.5",
		"@types/cors": "^2.8.17",
		"@types/express": "^4.17.21",
		"@types/morgan": "^1.9.9",
		"@types/node": "^22.10.5",
		"@types/supertest": "^6.0.2",
		"esbuild": "^0.24.2",
		"esbuild-register": "^3.6.0",
		"eslint": "^9.17.0",
